virtual-garden:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor: ~
      publish:
        dockerimages:
          landscaper-controller:
            registry: 'gcr-readwrite'
            image: eu.gcr.io/gardener-project/garden/virtual

  jobs:
    head-update:
      traits:
        draft_release: ~
        options:
          public_build_logs: true
    pull-request:
      traits:
        pull-request: ~
        draft_release: ~
        options:
          public_build_logs: true
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
